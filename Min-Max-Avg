
#include <iostream>
using namespace std;

int main() {
    double sum = 0;
    int count = 0;
    int max = 0;
    int min = RAND_MAX;

    cout << "Enter positive numbers. -1 to quit:\n ";
    for (int input; (cin >> input) && (input != -1); ++count) {
        if (input > max)
            max = input;
        if (input < min)
            min = input;

        sum += input;

    }
    cout << "Max is " << max << endl;
    cout << "Min is " << min << endl;
    cout << "Average is " << (sum) / count << endl;
return 0;
}
